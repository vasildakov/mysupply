{
    "name": "vasildakov/mysupply",
    "type": "library",
    "authors": [
        {
            "name": "Vasil Dakov",
            "email": "vasildakov@gmail.com",
            "homepage": "https://github.com/vasildakov"
        }
    ],
    "require": {
        "php": ">=8.1",
        "laminas/laminas-config": "^3.8",
        "symfony/yaml": "^6.2",
        "ext-yaml": "^2.2",
        "ext-xml": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/php-code-coverage": "^9.2",
        "vimeo/psalm": "^5.4",
        "fabpot/php-cs-fixer": "^3.13"
    },
    "autoload": {
        "psr-4": {
            "VasilDakov\\MySupply\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VasilDakov\\MySupplyTest\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "./vendor/bin/phpcs src",
        "phpcbf": "./vendor/bin/phpcbf",
        "test": "./vendor/bin/phpunit --coverage-html ./build/coverage",
        "psalm": "./vendor/bin/psalm --show-info=true"
    }
}
